<div class="container-fluid">
<div class="clients-index">

    <div class="main-heading">
      <div class="row">

        <div class="col-md-6">
          <h1>All Users</h1>
        </div>

        <div class="col-md-6">
          <%= link_to new_user_path, class: "btn btn-primary" do %>
            <i class="glyphicon glyphicon-plus"> </i> Add New User
          <% end %>
        </div>
      </div>
    </div>

<div class="main-heading-body"> 
  <div class="row">
    <div class="col-md-12">

      <table class="table table-bordered table-striped">
        <thead>
          <tr>
            <th>Sl no</th>
            <th>Email</th>
            <th>Role</th>
            <th colspan="3"></th> 
          </tr>
        </thead>

        <tbody>
          <% @users.each_with_index do |user, index| %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= user.email %></td>
              <td><%= user.role.name %></td>
              <td><%= link_to edit_user_path(user), class: "btn btn-info" do %>Edit<% end %></td>
            </tr>
          <% end %>
        </tbody>
    </table>

    </div>
  </div>
</div>

</div>
