<div class="container-fluid">
<p id="notice"><%= notice %></p>

<div class="main-heading">
<div class="row">

  <div class="col-md-6">
      <h1>All Districts</h1>
  </div>

  <div class="col-md-6">
    <%= link_to new_district_path, class: "btn btn-primary" do %>
      <i class="glyphicon glyphicon-plus"> </i> Add New District
    <% end %>
  </div>
</div>
</div>

<div class="main-heading-body"> 
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @districts.each do |district| %>
      <tr>
        <td><%= district.name %></td>
        <td><%= district.state.name %></td>
        <td><%= link_to district, class: "btn btn-success" do %>Show<% end %></td>
        <td><%= link_to edit_district_path(district), class: "btn btn-info" do %>Edit<% end  %></td>
        <td><%= link_to district, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" do %>Delete <% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
</div>
