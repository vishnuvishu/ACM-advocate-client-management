      <tbody>
      <% @hearing.fees.each do |fee| %>
        <tr>
          <td>1</th>
          <td> <%= fee.amount_paid %> </td>
          <td> <%= fee.fee_paid_date.to_date %> </td>
          <td> <%= fee.fee_comment %> </td>
          <td> <%= link_to 'edit', edit_hearing_fee_path(@hearing, fee) %>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>


</div>

<%#= link_to 'Add Fee', new_hearing_fee_path(@hearing, @fee) %>
