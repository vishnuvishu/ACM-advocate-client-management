<div class="notices-show">
<div class="container-fluid">
  <div class="row">
    <div class="col-md-6">

      <div class="row">
        <div class="col-md-12">
          <%= link_to edit_notice_path, class: "btn btn-info" do %>Edit <% end %>
          <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Add New Image</button>
          </div>
      </div>

      <div class="row">
        <div class="col-md-12">

          <table class="table">
                           
              <tbody>

                <tr>
                  <td><strong>Notice no:</strong></td>
                  <td><p><%= @notice.notice_no %></p></td>
                </tr>

                <tr>
                  <td><p><strong>Client:</strong></p></td>
                  <td><p><%= @notice.client.name %></p></td>
                </tr>

                <tr>
                  <td><p><strong>Opponent name:</strong></p></td>
                  <td><p><%= @notice.opponent_name %></p></td>
                </tr>

                <tr>
                  <td><p><strong>Opponent address:</strong></p></td>
                  <td><p><%= @notice.opponent_address %></p></td>
                </tr>

                <tr>
                  <td><p><strong>Date of notice:</strong></p></td>
                  <td><p><%= @notice.date_of_notice %></p></td>
                </tr>

                <tr>
                  <td><p><strong>Cover:</strong></p></td>
                  <td><p><%= image_tag(@notice.cover.url, size:"25x25") %></p></td>
                </tr>

              </tbody>
           </table>
        </div>
      </div>

      <script>
      $(document).ready(function(){
        $(".small-image").click(function(event){
          $("#cover_image").empty()
          $("#cover_image").append("<img src="+event.target.src+" width= ,'200px' height='200px'>")
        })
      })
      </script>


      <div class="row">
        <div class="col-md-12">

          <table class="table">          
              <tbody>
                <% @notice_images.each do |notice_image| %>
                    <tr>
                      <td><a href="#" class="small-image" id="<%= notice_image.notice_image.url %>"><%= image_tag(notice_image.notice_image.url, size:"25x25")  %></a></td>
                      <td><p><%= notice_image.name %></p></td>
                      <td><%= link_to edit_notice_image_path(notice_image), class: "btn btn-info" do %>Edit <% end %></td>
                     </tr>
                <% end %>
              </tbody>
           </table>

        </div>
      </div>

    </div>

<div class="col-md-6 image-display" id ="cover_image">
  <%= image_tag(@notice.cover.url) %>
</div>

</div>

</div>

</div>

</div>



<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Add new image</h4>
      </div>
      <div class="modal-body">
        
        <%= form_for([NoticeImage.new]) do |f| %>

        <div class="form-styling">

         <div class="row mb">
          <div class="col-md-3">
            <%= f.label :name %><br>
          </div>

          <div class="col-md-5">
            <%= f.text_field :name %>
          </div>
          <span id="advocateNameError"></span>
        </div>

        <div class="row mb">
          <div class="col-md-3">
            <%= f.label :notice_image %><br>
          </div>

          <div class="col-md-5">
            <%= f.file_field :notice_image %>
          </div>
          <span id="advocateNameError"></span>
        </div>

        <%= f.hidden_field :notice_id %>

        <div class="row mb">
          <div class="col-md-5 col-md-offset-3">
              <div class="actions">
                <%= f.submit "Submit", class: "btn btn-success" %>
              </div>
              
          </div>
        </div>

        <% end %>


      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>



