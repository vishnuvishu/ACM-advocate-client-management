<div class="container-fluid">

<div class="main-heading">
<div class="row">

  <div class="col-md-6">
      <h1>Listing Notices</h1>
  </div>

  <div class="col-md-6">
    <%= link_to new_notice_path, class: "btn btn-primary" do %>
      <i class="glyphicon glyphicon-plus"> </i> Add New Notice
    <% end %>
  </div>
</div>
</div>



<table class="table">
  <thead>
    <tr>
      <th>Notice no</th>
      <th>Client</th>
      <th>Opponent name</th>
      <th>Opponent address</th>
      <th>Date of notice</th>
      <th>Cover</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notices.each do |notice| %>
      <tr>
        <td><%= notice.notice_no %></td>
        <td><%= notice.client.name %></td>
        <td><%= notice.opponent_name %></td>
        <td><%= notice.opponent_address %></td>
        <td><%= notice.date_of_notice %></td>
        <td><%= image_tag(notice.cover.url, size:"25x25")%></td>
        <td><%= link_to 'Show', notice %></td>
        <td><%= link_to 'Edit', edit_notice_path(notice) %></td>
        <td><%= link_to 'Destroy', notice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>