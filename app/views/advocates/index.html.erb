<div class="container-fluid">
<p id="notice"><%= notice %></p>

<div class="advocates-index">

<div class="main-heading">
<div class="row">
  <div class="col-md-6">
      <h1>All Advocates</h1>
  </div>
  <div class="col-md-6">
      <%= link_to new_advocate_path, class: "btn btn-primary" do %>
  <i class="glyphicon glyphicon-plus"> </i> Add New Advocate
<% end %>
  </div>
</div>
</div>


<div class="main-heading-body"> 
<div class="row">
<div class="col-md-12">


<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Mobile</th>
      <th>Roll no</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @advocates.each do |advocate| %>
      <tr>
        <td><%= advocate.name %></td>
        <td><%= advocate.email %></td>
        <td><%= advocate.mobile %></td>
        <td><%= advocate.roll_no %></td>
        <td><%= link_to advocate, class: "btn btn-success" do %> Show <% end %></td>
        <td><%= link_to edit_advocate_path(advocate), class: "btn btn-info" do %> Edit <% end %></td>
        <td><%= link_to advocate, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" do %> Delete<% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
</div>
</div>
</div>
</div>

