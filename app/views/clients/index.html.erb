<div class="container-fluid">
<p id="notice"><%= notice %></p>
<div class="clients-index">

<div class="main-heading">
<div class="row">

  <div class="col-md-6">
      <h1>All Clients</h1>
  </div>

  <div class="col-md-6">
    <%= link_to new_client_path, class: "btn btn-primary" do %>
      <i class="glyphicon glyphicon-plus"> </i> Add New Client
    <% end %>
  </div>
</div>
</div>
<div class="main-heading-body"> 
<div class="row">
<div class="col-md-12">

<table class="table">
  <thead>
    <tr>
      <th>Name</th><!-- 
      <th>Address</th>
      <th>Pincode</th> -->
      <th>Email</th>
      <th>Primary Mobile</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
  <!--  <td><%#= client.address %></td>
        <td><%#= client.pincode %></td> -->
        <td><%= client.email %></td>
        <td><%= client.try(:primary_mobile) %></td>
        <td><%= link_to client, class: "btn btn-success" do %>Show<% end %></td>
        <td><%= link_to edit_client_path(client), class: "btn btn-info" do %>Edit<% end %></td>
        <td><%= link_to client, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" do %>Delete <% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
</div>
</div>
</div>
</div>

