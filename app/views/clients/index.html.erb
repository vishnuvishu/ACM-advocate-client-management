<div class="container-fluid">
  <div class="clients-index">
    <div class="main-heading">
      <div class="row">

        <div class="col-md-6">
          <h1>All Clients</h1>
        </div>

        <div class="col-md-6">
          <%= link_to new_client_path, class: "btn btn-primary" do %>
            <i class="glyphicon glyphicon-plus"> </i> Add New Client
          <% end %>
        </div>
      </div>
    </div>

<div class="main-heading-body"> 
  <div class="row">
    <div class="col-md-12">

      <table class="table table-bordered table-striped">
        <thead>
          <tr>
            <th>Sl.no</th>
            <th>Name</th>
            <th>Email</th>
            <th>Primary Mobile</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @clients.each_with_index do |client, index| %>
            <tr>
              <td><%= index + 1 %>
              <td><%= client.name %></td>
              <td><%= client.email %></td>
              <td><%= client.try(:primary_mobile) %></td>
              <td><%= link_to client, class: "btn btn-success" do %>Show<% end %></td>
              <td><%= link_to edit_client_path(client), class: "btn btn-info" do %>Edit<% end %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>
</div>
</div>

