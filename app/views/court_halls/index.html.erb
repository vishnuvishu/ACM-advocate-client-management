<div class="container-fluid">
<p id="notice"><%= notice %></p>

<div class="main-heading">
<div class="row">

  <div class="col-md-6">
      <h1>All Court Halls</h1>
  </div>

  <div class="col-md-6">
    <%= link_to new_court_hall_path, class: "btn btn-primary" do %>
      <i class="glyphicon glyphicon-plus"> </i> Add New Court Hall
    <% end %>
  </div>
</div>
</div>

<div class="main-heading-body"> 
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Court complex</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @court_halls.each do |court_hall| %>
      <tr>
        <td><%= court_hall.name %></td>
        <td><%= court_hall.court_complex.name %></td>
        <td><%= link_to court_hall,class: "btn btn-success" do %>Show<% end %></td>
        <td><%= link_to edit_court_hall_path(court_hall), class: "btn btn-info" do %>Edit<% end %></td>
        <td><%= link_to court_hall, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" do %>Delete <% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>


</div>
</div>