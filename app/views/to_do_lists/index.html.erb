<div class="container-fluid">

<div class="main-heading">
<div class="row">

  <div class="col-md-6">
      <h1>All To Do Lists</h1>
  </div>

  <div class="col-md-6">
    <%= link_to new_to_do_list_path , class: "btn btn-primary" do %>
      <i class="glyphicon glyphicon-plus"> </i> Add To Do List
    <% end %>
  </div>
</div>
</div>


<div class="main-heading-body"> 
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Sl no </th>
      <th>Title</th>
      <th>Description</th>
      <th>List date</th>
      <th>Client case</th>
      <th>Advocate</th>
      <th>Is litigation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @to_do_lists.each_with_index do |to_do_list, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= to_do_list.title %></td>
        <td><%= to_do_list.description %></td>
        <td><%= to_do_list.list_date.strftime("%d-%m-%Y") %></td>
        <td><%= to_do_list.client_case.try(:case_format) %></td>
    <!--  <td><%#= Advocate.find(to_do_list.advocate).name %></td> -->
        <td><%= to_do_list.advocate.name %>
        <td>
          <% if to_do_list.is_litigation == true %>
            <%= "litigation" %>
          <% else %>
          <%= "non litigation" %>
          <% end %>
        </td>
        <td><%#= link_to 'Show', to_do_list %></td>
        <td><%= link_to edit_to_do_list_path(to_do_list), class: "btn btn-info" do %>Edit<% end %></td>

        <td><%#= link_to 'Destroy', to_do_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>


</div>