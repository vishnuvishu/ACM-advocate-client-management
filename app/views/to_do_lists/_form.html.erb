<div class="row">
  <div class="col-md-6">

      <%= form_for(@to_do_list) do |f| %>
      <% if @to_do_list.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@to_do_list.errors.count, "error") %> prohibited this to_do_list from being saved:</h2>

          <ul>
          <% @to_do_list.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

  <div class="form-styling">

      <div class="row mb">
        <div class="col-md-2">
          <%= f.label :title %><br>
        </div>

        <div class="col-md-5">
          <%= f.text_field :title %>
        </div>
        <span id="ToDoListTitleError"></span>
      </div>

      <div class="row mb">
        <div class="col-md-2">
          <%= f.label :description %><br>
        </div>

        <div class="col-md-5">
          <%= f.text_field :description %>
        </div>
        <span id="ToDoListDescriptionError"></span>
      </div>

      <div class="row mb">
        <div class="col-md-2">
          <%= f.label :due_date %><br>
        </div>

        <div class="col-md-5">
          <%= f.text_field :list_date %>
        </div>
      </div>

      <div class="row mb">
        <% if params[:client_case].present? %>
          <%= f.hidden_field :client_case_id, value: params[:client_case] %><br>
        <% else %>

        <div class="col-md-2">
          <%= f.label :client_case %><br>
        </div>

        <div class="col-md-5">
          <%= f.collection_select :client_case_id, ClientCase.all, :id, :case_format , prompt: "Select Case"%>
        </div>

        <% end %>
      </div>

      <div class="row mb">
        <div class="col-md-2">
          <%= f.label :advocate_from %><br>
        </div>

        <div class="col-md-5">
          <%= f.collection_select :advocate_from, Advocate.all, :id, :name, prompt: "Select Advocate" %>
        </div>
      </div>

      <div class="row mb">
        <div class="col-md-2">
          <%= f.label :advocate_to %><br>
        </div>

        <div class="col-md-5">
         <%= f.collection_select :advocate_to, Advocate.all, :id, :name, prompt: "Select Advocate" %>
        </div>
      </div>
  </div>

      <div class="row mb">
        <div class="col-md-2">
          <%= f.label :is_litigation %><br>
        </div>

        <div class="col-md-5">
          <div class="row">
            <div class="col-md-6">
              <%= f.label :is_litigation, "Litigation", :value => "Litigation" %> 
              <%= f.radio_button :is_litigation, true %>
            </div>
            <div class="col-md-6">
                <%= f.label :is_litigation, "Non Litigation", :value => "Non Litigation" %>
                <%= f.radio_button :is_litigation, false %>
            </div>
            </div>
        </div>
      </div>

      <div class="row mb">
        <div class="col-md-5 col-md-offset-2">
            <div class="actions">
              <%= f.submit "Submit", class: "btn btn-success" %>
            </div>
            <% end %>
        </div>
      </div>

    </div>
  </div>
</div>

 <script>
  $( function() {
    $( "#to_do_list_list_date" ).datepicker({
      dateFormat: 'yy-mm-dd',
      // minDate: 0
    });
  } );

  </script>

  <script>
    var ToDoListTitleHandle = document.getElementById('to_do_list_title');
    var ToDoListDescriptionHandle = document.getElementById('to_do_list_description');

    var ToDoListTitleErrorHandle = document.getElementById('ToDoListTitleError');
    var ToDoListDescriptionErrorHandle = document.getElementById('ToDoListDescriptionError');

    ToDoListTitleHandle.onblur = function(){
    if(ToDoListTitleHandle.value.length == ""){
      ToDoListTitleErrorHandle.innerHTML = "can't be blank";
    }
    else{
      ToDoListTitleErrorHandle.innerHTML = "";
    }
  }

  ToDoListDescriptionHandle.onblur = function(){
    if(ToDoListDescriptionHandle.value.length == ""){
      ToDoListDescriptionErrorHandle.innerHTML = "can't be blank";
    }
    else{
      ToDoListDescriptionErrorHandle.innerHTML = "";
    }
  }

  </script>
