<div class="container-fluid">


<div class="main-heading">
  <div class="row">

      <div class="col-md-6">
        <h1>All Case Types</h1>
      </div>

      <div class="col-md-6">
      <%= link_to new_case_type_path, class: "btn btn-primary" do  %>
          <i class="glyphicon glyphicon-plus"> </i> Add Case Type
      <% end %>

      </div>

  </div>
    
</div>

<div class="main-heading-body"> 
<table class="table table-bordered table-striped"> 
  <thead>
    <tr>
      <th>Sl no</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @case_types.each_with_index do |case_type, index| %>
      <tr>
        <td><%= index + 1 %>
        <td><%= case_type.name %></td>
        <!-- <td><%#= link_to case_type, class: "btn btn-success" do %> Show <%# end %></td> -->
        <td><%= link_to edit_case_type_path(case_type), class: "btn btn-info" do %>Edit <% end %></td>
      <!--   <td><%#= link_to case_type, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" do %>Delete<%# end %></td> -->
      </tr>

    <% end %>
  </tbody>
</table>

<br>


</div>
</div>