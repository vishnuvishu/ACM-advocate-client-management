<div class="container-fluid">

<div class="main-heading">
<div class="row">

  <div class="col-md-6">
      <h1>All States</h1>
  </div>

  <div class="col-md-6">
    <%= link_to new_state_path, class: "btn btn-primary" do %>
      <i class="glyphicon glyphicon-plus"> </i> Add New State
    <% end %>
  </div>
</div>
</div>


<div class="main-heading-body"> 
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @states.each do |state| %>
      <tr>
        <td><%= state.name %></td>
        <!-- <td><%#= link_to state, class: "btn btn-success" do %>Show<%# end %></td> -->
        <td><%= link_to edit_state_path(state), class: "btn btn-info" do %>Edit<% end %></td>
       <!--  <td><%#= link_to state, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger" do %>Delete <%# end %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

</div>
</div>