<div class="container-fluid">

<div class="main-heading">
<div class="row">

  <div class="col-md-6">
      <h1>All Court Complexes</h1>
  </div>

  <div class="col-md-6">
    <%= link_to new_court_complex_path, class: "btn btn-primary" do %>
      <i class="glyphicon glyphicon-plus"> </i> Add New Court Complex
    <% end %>
  </div>
</div>
</div>

<div class="main-heading-body"> 
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>State</th>
      <th>District</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @court_complexes.each do |court_complex| %>
      <tr>
        <td><%= court_complex.name %></td>
        <td><%= court_complex.state.name %></td>
        <td><%= court_complex.district.name %></td>
        <!-- <td><%#= link_to court_complex, class: "btn btn-success" do %>Show<%# end %></td> -->
        <td><%= link_to edit_court_complex_path(court_complex), class: "btn btn-info" do %>Edit<% end  %></td>
        <!-- <td><%#= link_to court_complex, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" do %>Delete <%# end %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

</div>
</div>