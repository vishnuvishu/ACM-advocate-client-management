<div class="container-fluid">
<p id="notice"><%= notice %></p>


 <div class="main-heading">
    <h1>All Fees</h1>
  </div>

<div class="main-heading-body"> 
<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Hearing</th>
      <th>Amount paid</th>
      <th>Fee paid date</th>
      <th>Fee comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fees.each do |fee| %>
      <tr>
        <td><%= fee.id %></td>
        <td><%= fee.hearing_id %></td>
        <td><%= fee.amount_paid %></td>
        <td><%= fee.fee_paid_date.to_date %></td>
        <td><%= fee.fee_comment %></td>
        <td><%= link_to fee, class: "btn btn-success" do %> Show <% end %></td>
        <td><%= link_to edit_hearing_fee_path(fee), class: "btn btn-info" do %>Edit <% end%></td>
        <td><%= link_to fee, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" do %>Delete<% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%#= link_to 'New Fee', new_fee_path %>
</div>
</div>