<div class="container-fluid">


 <div class="main-heading">
    <h1>All Fees</h1>
  </div>

<div class="main-heading-body"> 
<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Hearing</th>
      <th>Amount paid</th>
      <th>comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fees.each do |fee| %>
      <tr>
        <td><%= fee.id %></td>
        <td><%= fee.try(:hearing_id) %></td>
        <td><%= fee.amount %></td>
        <td><%= fee.comment %></td>
    <% end %>
  </tbody>
</table>

<br>

</div>
</div>